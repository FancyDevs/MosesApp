<?xml version="1.0" encoding="utf-8"?>
<resources>
  	<style name="Theme.Splash" parent="android:Theme">
    	<item name="android:background">@drawable/cross_background</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:scaleType">centerCrop</item>
  	</style>
  	<style name="Theme.PreLogin" parent="android:Theme">
    	<item name="android:background">@drawable/cross_background</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:scaleType">centerCrop</item>
  	</style>
  	<style name="Theme.PostLogin" parent="android:Theme">
    	<item name="android:background">@color/white</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
  
  <!-- Button / Edit text styles -->

  	<style name="PreLoginButton">
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">60dp</item>
    	<item name="android:layout_marginLeft">20dp</item>
    	<item name="android:layout_marginRight">20dp</item>
    	<item name="android:layout_marginBottom">20dp</item>
    	<item name="android:background">@drawable/preloginbuttonbackground</item>
    	<item name="android:textSize">25sp</item>
  	</style>
  
  	<style name="PreLoginEditText">
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginLeft">20dp</item>
    	<item name="android:layout_marginRight">20dp</item>
    	<item name="android:layout_marginBottom">20dp</item>
    	<item name="android:padding">10dp</item>
    	<item name="android:background">@color/lightblue</item>
    	<item name="android:textSize">20sp</item>
  	</style>
	
  	<style name="PreLoginTextView">
  		<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginLeft">20dp</item>
  		<item name="android:layout_marginRight">20dp</item>
    	<item name="android:layout_marginBottom">20dp</item>
    	<item name="android:padding">10dp</item>
		<item name="android:textColor">@color/black</item>
    	<item name="android:gravity">center</item>
    	<item name="android:background">@color/lightblue</item>
    	<item name="android:textSize">20sp</item>
  	</style>

	<style name="BottomToolbarButtons">
    	<item name="android:layout_width">0dp</item>
    	<item name="android:layout_height">40dp</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:background">@drawable/toolbar_buttons</item>
    	<item name="android:layout_margin">5dp</item>
	</style>
</resources>
