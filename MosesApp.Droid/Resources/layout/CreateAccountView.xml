<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            style="@style/PreLoginTextView"
            android:id="@+id/create_account_text"
            android:text="Are you the Host or Attendee of your Bible Study?" />
        <Button
            style="@style/PreLoginButton"
            android:id="@+id/button_host"
            android:text="Host" />
        <Button
            style="@style/PreLoginButton"
            android:id="@+id/button_attendee"
            android:text="Attendee" />
        <Button
            style="@style/PreLoginButton"
            android:id="@+id/button_neither"
            android:text="Neither" />
    </LinearLayout>
</RelativeLayout>